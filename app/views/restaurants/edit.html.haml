.col-md-6.restaurant-listing-edit
  = image_tag attachment_url(@restaurant.photos.first, :image), class: 'img-responsive'

.col-md-6
  .row
    = render 'form'
  .col-sm-2.form-button
    = link_to @restaurant, class: 'btn btn-primary' do
      %span.glyphicon.glyphicon-info-sign
      Back
  .col-sm-2.form-button
